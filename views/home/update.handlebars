<div class="h2 mt-4">Atualizar Cliente</div>

<form class="mt-4" action="/updating/{{cliente.id}}" method="post">

    <div class="form-group">
        <label for="cliente">Cliente: </label>
        <input class="form-control" type="text" name="cliente" id="cliente" value="{{cliente.cliente}}" required>
    </div>
    <div class="form-group">
        <label for="carro">Carro: </label>
        <input class="form-control" type="text" name="carro" id="carro" value="{{cliente.carro}}" required>
    </div>
    <div class="form-group">
        <label for="observacao">Observações: </label>
        <input class="form-control" type="text" name="observacao" id="observacao" value="{{cliente.observacao}}" required>
    </div>

    <div class="row"> 
        <div class="col-2">
            <label for="valor">Valor: </label>
            <input type="number" name="valor" class="form-control" value="{{cliente.valor}}" required>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="pagform">Forma de Pagamento: </label>
                <input class="form-control" type="text" name="pagform" id="pagform" value="{{cliente.pagform}}" required value="Teste">
            </div>
        </div>
    </div>


    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" name="pago" id="pago">
        <label class="form-check-label" for="pago">Pago</label>
    </div>

    <input class='btn btn-success' type="submit" value="Atualizar">
</form>

